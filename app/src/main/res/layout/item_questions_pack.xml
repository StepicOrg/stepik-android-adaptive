<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardBody"
        tools:background="@drawable/pack_bg_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/packTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_margin="@dimen/questions_pack_margin"
            android:fontFamily="sans-serif-black"
            android:textColor="#DDFFFFFF"
            android:textSize="36sp"
            tools:text="Basic" />

        <TextView
            android:id="@+id/packDescription"
            android:layout_marginStart="@dimen/questions_pack_margin"
            android:layout_marginEnd="@dimen/questions_pack_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textColor="#CCFFFFFF"
            tools:text="Adaptive problem set to check your knowledge of English words. This course contains 718 complex words. Try it if you TOEFL vocabulary course is too easy for you."/>

        <TextView
            android:id="@+id/packQuestionsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/questions_pack_margin"
            android:layout_marginEnd="@dimen/questions_pack_margin"
            android:layout_marginTop="@dimen/questions_pack_margin"
            tools:textColor="#CCFFFFFF"/>

        <TextView
            android:id="@+id/packDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/questions_pack_margin"
            android:layout_marginEnd="@dimen/questions_pack_margin"
            android:layout_marginBottom="@dimen/questions_pack_margin"
            tools:textColor="#CCFFFFFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/questions_pack_margin"
            android:layout_marginBottom="@dimen/questions_pack_margin"
            android:layout_marginEnd="@dimen/questions_pack_margin">
            <Button
                android:id="@+id/packButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.WhiteButton"
                android:textColor="@color/colorDarkGrayText"
                android:layout_alignParentStart="true"
                tools:text="@string/select" />

            <TextView
                android:id="@+id/packPriceDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/packButton"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#CCFFFFFF"
                android:visibility="gone"
                tools:text="$10.99"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/packPriceDiscountDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/packPriceDiscount"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/questions_discount_background"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium"
                tools:text="-77% limited offer"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/packProgressDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/packButton"
                android:layout_marginStart="16dp"
                android:gravity="end"
                tools:text="Бесплатно на уровне 10"
                tools:textColor="#CCFFFFFF"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/packActiveIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/questions_pack_margin"
            android:layout_marginBottom="@dimen/questions_pack_margin"
            android:layout_marginEnd="@dimen/questions_pack_margin" />
    </LinearLayout>

</androidx.cardview.widget.CardView>